{
	"name": "@mozisan/prettier-config",
	"version": "3.0.0",
	"homepage": "https://github.com/mozisan/prettier-config#readme",
	"bugs": {
		"url": "https://github.com/mozisan/prettier-config/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/mozisan/prettier-config.git"
	},
	"license": "MIT",
	"author": "mozisan",
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/esm/default.js",
			"require": "./dist/cjs/default.cjs"
		},
		"./tailwindcss": {
			"import": "./dist/esm/tailwindcss.js",
			"require": "./dist/cjs/tailwindcss.cjs"
		}
	},
	"main": "./dist/esm/default.cjs",
	"module": "./dist/esm/default.js",
	"files": [
		"dist",
		"package.json"
	],
	"scripts": {
		"prepare": "husky install",
		"build": "tsup",
		"fix": "run-s fix:eslint fix:prettier",
		"fix:eslint": "eslint --fix .",
		"fix:prettier": "prettier --write --log-level=warn .",
		"lint": "run-s lint:eslint lint:prettier",
		"lint:eslint": "eslint .",
		"lint:prettier": "prettier --check --log-level=warn ."
	},
	"prettier": "./dist/esm/default.js",
	"dependencies": {
		"prettier-plugin-packagejson": "^2.4.5",
		"prettier-plugin-tailwindcss": "^0.4.1"
	},
	"devDependencies": {
		"@mozisan/eslint-plugin": "^2.0.0",
		"@tsconfig/node18": "^18.2.0",
		"@tsconfig/strictest": "^2.0.1",
		"eslint": "^8.46.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.0",
		"tsup": "^7.1.0",
		"typescript": "^5.1.6"
	},
	"peerDependencies": {
		"prettier": "^3"
	},
	"packageManager": "pnpm@8.6.11",
	"publishConfig": {
		"access": "public"
	}
}
